<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/calculator_bg">

    <!-- Display -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/display_bg"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:fontFamily="monospace"
        android:ellipsize="end"
        android:singleLine="true" />

    <!-- Keypad -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Row 1 -->
        <com.google.android.material.button.MaterialButton
            style="@style/CalcButton"
            android:id="@+id/btnClear"
            android:text="C" />
        <com.google.android.material.button.MaterialButton
            style="@style/CalcButton"
            android:id="@+id/btnSqrt"
            android:text="√" />
        <com.google.android.material.button.MaterialButton
            style="@style/CalcButton"
            android:id="@+id/btnPow"
            android:text="xʸ" />
        <com.google.android.material.button.MaterialButton
            style="@style/CalcButton"
            android:id="@+id/btnDiv"
            android:text="÷" />

        <!-- Row 2 -->
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn7" android:text="7" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn8" android:text="8" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn9" android:text="9" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnMul" android:text="×" />

        <!-- Row 3 -->
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn4" android:text="4" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn5" android:text="5" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn6" android:text="6" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnSub" android:text="-" />

        <!-- Row 4 -->
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn1" android:text="1" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn2" android:text="2" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn3" android:text="3" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnAdd" android:text="+" />

        <!-- Row 5 -->
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btn0" android:text="0" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnDot" android:text="." />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEqual"
            style="@style/CalcButton.Equal"
            android:text="="/>
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnSin" android:text="sin" />

        <!-- Row 6 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCos"
            style="@style/CalcButton"
            android:layout_height="wrap_content"
            android:text="cos" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnTan" android:text="tan" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnLog" android:text="log" />
        <com.google.android.material.button.MaterialButton style="@style/CalcButton" android:id="@+id/btnLn" android:text="ln" />
    </GridLayout>

    <!-- Conversions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conversions"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                style="@style/CalcButton"
                android:id="@+id/btnCmToFt"
                android:text="cm → ft" />

            <com.google.android.material.button.MaterialButton
                style="@style/CalcButton"
                android:id="@+id/btnKToC"
                android:text="K → °C" />

            <com.google.android.material.button.MaterialButton
                style="@style/CalcButton"
                android:id="@+id/btnCToF"
                android:text="°C → °F" />

            <com.google.android.material.button.MaterialButton
                style="@style/CalcButton"
                android:id="@+id/btnKgToLb"
                android:text="kg → lb" />
        </GridLayout>

    </GridLayout>

</LinearLayout>
